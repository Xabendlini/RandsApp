<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandsApp2.VerificationPage"
             Title="VerificationPage">
    <StackLayout>
        <Label 
       Text=" Verify your information "
        FontSize="Title" 
        HorizontalOptions="Center" 
        Margin="20"/>

        <Entry 
        Placeholder="ID Number"/>

        <Entry 
        Placeholder="Phone Number"/>

        <Entry 
        Placeholder="Email"/>

        <Label
            Text="BirthDate"/>

        <DatePicker 
            x:Name="birthdatePicker"/>

        <Button 
            Text="Verify"
            Clicked="OnVerifyClicked"/>

    </StackLayout>
    
</ContentPage>