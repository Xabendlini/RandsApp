<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandsApp2.MenuPage"
    
    
    ><ContentPage Title="Home" >
        <StackLayout>
            <Label 
                Text="Welcome to Rands Cape Town!"
                FontSize="Header" 
                TextColor="Red" 
                HorizontalOptions="CenterAndExpand" 
                Margin="10"/>
        </StackLayout>
    </ContentPage>
     
    
    <ContentPage Title="Food" >
        <StackLayout>
            <Image 
                Source="Foodmenu.jpg"
                Aspect="AspectFill"
                HeightRequest="250"
                WidthRequest="250" />
        </StackLayout>
        
    </ContentPage>

    <ContentPage Title="Drinks" >
        <StackLayout>
            <Image 
            Source="PriceList.jpg"
            Aspect="AspectFill"
            HeightRequest="350"
            WidthRequest="350" />
        </StackLayout>

    </ContentPage>

    <ContentPage Title="Disclaimer" >
        <StackLayout>
            <Image 
            Source="Disclamer.jpg"
            Aspect="AspectFill"
            HeightRequest="350"
            WidthRequest="350" />
        </StackLayout>

    </ContentPage>
</TabbedPage>